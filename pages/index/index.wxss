/**index.wxss**/

.image {
  width: 100.8vw;
  height: 64.5333vw;
}
.pos {
  position: absolute;
  left: 0;
  right: -6rpx;
  top: 0;
}
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.home-button {
  position: relative;
  top: 20rpx;
  left: 20rpx;
  background-color: transparent;
  
}

.home-icon {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container-sub{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 100%;
  margin-bottom: 60rpx;
}

.container-sub-sec{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 150rpx;
  width: 100%;
  margin-bottom: 150rpx;
}

.logo{
  display: flex;
  justify-content: center;
  align-items: center;
  height:auto;
  width: auto;
}

.logo .img{
  display: flex;
  justify-content: flex-start;
  margin: 20rpx;
  height: 200rpx;
  width: 200rpx;
}

.center-img {
  /* 根据需要设置宽高，可以确保图片合适显示在容器中 */
  width: 100%;
  height: 100%;  /* 确保图片适应容器的高度 */
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
  margin-top: 30rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 50px;
}

.avatar-wrapper {
  padding: 0;
  width: 110px !important;
  margin-top: 60px;
  margin-bottom: 15px;
  border-radius: 50%;
}
.image_chname{
  width: 40rpx;
  height: 40rpx;
}
.avatar {
  display: block;
  width: 110px;
  height: 110px;
  border-radius: 50%;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.archi-image {
  display: flex;
  margin-top: 30rpx;
  padding: 0 82rpx;
  display: flex;
  justify-content: center;
}


.qrcode {
  display: flex;
  margin-top: 250rpx;
  justify-content: center;
}

.qrcode image {
  width: 172rpx;
  height: 172rpx;
}

.qrcode-tips {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  margin-top: 60rpx;
  background: linear-gradient(180deg, #00F 0%, rgba(2, 125, 215, 0.00) 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.know-more {
  width: 100%;
  text-align: center;
  font-size: 18rpx;
  background: linear-gradient(90deg, #754ABC 15.08%, #009FE8 80.82%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-top: 16rpx;

}

.know-more image {
  height: 32rpx;
  width: 32rpx;
  vertical-align: middle;
}

.copyright {
  text-align: center;
  color: #979797;
  font-size:16rpx;
}

.text-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 102rpx;
  padding: 16rpx 0;
  background-color: #9C443A; /* 设置背景颜色为棕色 */
  border-radius: 20rpx;
  background-size: 100% 100%;
  width: 612rpx;
}


.text {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #813A02;
  font-size: 32rpx;
  font-family: Yaldevi Colombo Light;
  line-height: 29.72rpx;
  letter-spacing: 3.2rpx;
  margin-top: 50rpx;
}
