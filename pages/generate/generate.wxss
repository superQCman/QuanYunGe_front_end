/* pages/generate/generate.wxss */
.container-sub{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10rpx;
  width: 100%;
  margin-bottom: 100rpx;
}

.textBox_center{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  height:auto;
  width: auto;
  border-radius: 20rpx;
}

.textBox_start{
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
  height: auto;
  width: auto;
  border-radius: 20rpx;
  /* background-color: rgb(235, 220, 209); */
}

.textBox_center .Img{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 550rpx;
  width: 550rpx;
}

.smallImg{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 180rpx;
}
.nickname-wrapper {
  display: flex;
  width: 90%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
  margin:10rpx;
}
.nickname-label {
  width: 105px;
}
.nickname-input {
  flex: 1;
}
.text{
  color: #813A02;
  white-space: normal; 
  word-break: break-word;
  max-width: 100%; /* 防止超出父容器 */
}

.textSize_70{
  font-size: 70rpx;
}

.textSize_50{
  font-size: 50rpx;
}

.textSize_30{
  font-size: 30rpx;
}
.usermotto {
  margin-top: 50px;
  margin-bottom: 20rpx;
}