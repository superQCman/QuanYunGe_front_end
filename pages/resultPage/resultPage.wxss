/* pages/resultPage/resultPage.wxss */
.result-works {
  position: relative;
  margin-top: 32rpx;
  width: 90vw;
  height: 60vh;
  margin: 20rpx 5vw;
  /* -webkit-perspective: 1500;
  -moz-perspective: 1500; */
  cursor:default;
}
.result-works-box {
  position: absolute;
  width: 90vw;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 20rpx;
  cursor: pointer;
  height: 60vh;
  overflow-y: scroll;
}

.result-works-box>image {
  cursor:default;
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;

}

.result-works-building {
  transform: rotateY(-180deg);
}

.result-works-photo {
  overflow: hidden;
}

.result-works-photo-point{
  cursor:default;
  position:absolute;
  width:40rpx;
  height:40rpx;
  font-size:24rpx;
  line-height:40rpx;
  color:white;
  border-radius:40rpx;
  text-align:center;
}

.select-button-scroller {
  padding: 0 46rpx;
  margin: 30rpx 0 0;
  height: 112rpx;
}

.select-button-scroller-view {
  /* display: flex; */
  white-space: nowrap;
  overflow:scroll;
}

.select-button-scroller-view::-webkit-scrollbar {
  display: none;
}

.select-button-scroller-item {
  margin-right: 24rpx;
  flex: 1;
}

.select-button-scroller-item:last-child {
  margin-right: 0;
}