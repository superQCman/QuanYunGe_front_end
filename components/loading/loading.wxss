.loading {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.loading-logo {
  margin-bottom: 5rpx;
  width: 196rpx;
  height: 222rpx;
}

.loading-name{
  text-align: center;
}

.back{
  width: 80rpx;
}

.back-image{
  height: 34rpx;
  width: 100%;
}

.logo {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 196rpx;
  height: 174rpx;
}

.archi-casca{
  margin-top: 30rpx;
}

.archi-casca-name {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 430rpx;
}

.archi-desc {
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  background: linear-gradient(90deg, #754ABC 15.08%, #009FE8 80.82%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}